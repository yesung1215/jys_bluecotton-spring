<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.bluecotton.mapper.PostImageMapper">

    <!-- 임시 이미지 저장 -->
    <insert id="insertImgTemp" parameterType="com.app.bluecotton.domain.vo.post.PostImageVO">
        <selectKey keyProperty="id" resultType="Long" order="BEFORE">
            SELECT SEQ_POST_IMAGE.NEXTVAL FROM DUAL
        </selectKey>
        INSERT INTO TBL_POST_IMAGE (ID, POST_IMAGE_PATH, POST_IMAGE_NAME)
        VALUES (#{id}, #{postImagePath}, #{postImageName})
    </insert>

    <!-- 다중 업데이트 -->
    <update id="updateImgPostId" parameterType="com.app.bluecotton.domain.dto.post.PostImageUpdateDTO">
        UPDATE TBL_POST_IMAGE
        SET POST_ID = #{postId}
        WHERE ID IN
        <foreach collection="postImageIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <!-- 단일 이미지 postId 연결 -->
    <update id="updatePostId">
        UPDATE TBL_POST_IMAGE
        SET POST_ID = #{postId}
        WHERE ID = #{imageId}
    </update>

