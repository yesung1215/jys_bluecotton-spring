    <!-- 기본 썸네일 -->
    <insert id="insertDefaultImage">
        INSERT INTO TBL_POST_IMAGE (
        ID, POST_IMAGE_PATH, POST_IMAGE_NAME, POST_ID
        ) VALUES (
        SEQ_POST_IMAGE.NEXTVAL,
        '/upload/default/',
        'default_post.jpg',
        #{postId}
        )
    </insert>

    <!-- 조회 -->
    <select id="selectImagesByPostId" parameterType="Long" resultType="com.app.bluecotton.domain.vo.post.PostImageVO">
        SELECT * FROM TBL_POST_IMAGE
        WHERE POST_ID = #{postId}
    </select>

</mapper>